generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // ADMIN, USER
  isApproved    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Campaign {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  content     String?  @db.Text
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE
  tools       SoftwareTool[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuickLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  icon      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SoftwareTool {
  id          String   @id @default(cuid())
  name        String
  description String?
  url         String
  icon        String?
  image       String?
  locations   String[] @default([]) // DASHBOARD, TOOLS_PAGE
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id])
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
